# API Gateway Environment Variables
# =================================

# Application Configuration
CONFIG_PATH=./config
CONFIG_NAME=config

# Logging Configuration
LOG_ENV=local
LOG_APP_ID=e-commerce-platform
LOG_LEVEL=7
LOG_DEBUG=true
LOG_ENABLE_CALLER=true
LOG_CALLER_MIN_LEVEL=3

# Web Server Configuration
WEB_MODE=debug
WEB_PORT=8080
WEB_REQUEST_DUMP=true
WEB_MAX_LOG_BODY_SIZE=1024

# API Gateway Configuration
API_GATEWAY_WEBSITE_ADDR=http://localhost:3000
API_GATEWAY_ADDR=:8080
API_GATEWAY_RATE_LIMIT_ENABLED=true
API_GATEWAY_RATE_LIMIT_POOL_SIZE=1000
API_GATEWAY_RATE_LIMIT_HEADER_KEY=
API_GATEWAY_TOKEN_GEN_RATE=10.0
API_GATEWAY_TOKEN_BUCKET_CAPACITY=100.0
API_GATEWAY_TOKEN_BUCKET_CAPACITY_FOR_PUBLIC_SOURCE=50.0
API_GATEWAY_HTML_TEMPLATE_PATH=./templates

# Resource Configuration
RESOURCE_CONFIG_SIGN_URL_ENABLE=false
RESOURCE_CONFIG_SIGN_URL_DURATION_MIN=60

# Upstream gRPC Services
UPSTREAM_GRPC_USER_MGMT_SERVICE_GRPC=localhost:50051

# JWT Configuration (if needed)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY_HOURS=24

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce
DB_USER=postgres
DB_PASSWORD=password
DB_SSL_MODE=disable

# Redis Configuration (if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External Services
IDENTITY_SERVICE_URL=http://localhost:50051
PRODUCT_SERVICE_URL=http://localhost:50052
ORDER_SERVICE_URL=http://localhost:50053
PAYMENT_SERVICE_URL=http://localhost:50054

# Development Settings
DEBUG=true
ENVIRONMENT=development 